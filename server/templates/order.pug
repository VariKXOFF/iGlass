doctype html
html
    head
        meta(charset="utf-8")
        meta(name="viewport" content="width=device-width, initial-scale=1")
        link(href='https://css.gg/css' rel='stylesheet')
        link(rel="stylesheet" href="/style.css")
        title Форма заказа
    body
        header.header
            nav.navigation
                img(src="imgs/logo.png" alt="logo").navigation__logo
                a.navigation__back(href="/")
                    i.navigation__back__image(class="gg-mail-reply")
        main.main
            form.form#formOrder(method="post" onkeypress="return event.keyCode != 13")
                img(alt="Image" src="/imgs/steklo.png").form__image
                div.glass
                    h2.glass__caption Виды стекол
                    - let i = 0
                    - let glass = ['Закаленное стекло', 'Прозрачное стекло', 'Триплекс стекло', 'Стекло Стемалит', 'Гнутое стекло', 'Витражное стекло', 'Бронированное стекло', 'Матовое стекло', 'Противопожарное стекло', 'Двухслойное стекло', 'Цветное стекло', 'Тонированное стекло']
                    - let valueGlass = ['tempered', 'transparent', 'triplex', 'stemalitis', 'bent', 'stained', 'armored', 'matt', 'fire', 'two-layer', 'colored', 'toning']
                    label.glass__label Выберите вид стекла:
                        select.glass__select(name="species")
                            while i < 10
                                option.glass__option(value=`${valueGlass[i]}`)= glass[i]
                                - i++
                            option.glass__option#color(value=`${valueGlass[10]}`)= glass[10]
                            option.glass__option#toning(value=`${valueGlass[11]}`)= glass[11]
                    div.glass__toning
                        label.glass__toning-label Введите процент тонировки:
                            input.glass__toning-input(type="number" name="toning" value="0" min="0" max="100")
                    div.glass__color
                        label.glass__color-label Выберите цвет стекла:
                            input.glass__color-input(type="color", name="color" value="#ffffff")
                    a
                        div.next.next--hover.next--active
                            p Продолжить
                div.glass-size
                    h2.glass-size__caption Размер стекла
                    label.glass-size__label Толщина (в мм.)
                        input.glass-size__input(type="number" name="weight" min="3" max="20" value="3" maxlength="2")
                    label.glass-size__label Форма
                        select.glass-size__select(name="format")
                            option(value="square" selected) Прямоугольное
                            option(value="figure") Фигура
                            option(value="circle") Круглое
                    label.glass-size__label Ширина (в мм.)
                        input.glass-size__input(type="number" name="width" min="120" max="3200" value="120" maxlength="2")
                    label.glass-size__label Высота (в мм.)
                        input.glass-size__input(type="number" name="height" min="120" max="3200" value="120" maxlength="2")
                    a
                        div.back.back--hover.back--active
                            p Назад
                    a
                        div.next.next--hover.next--active
                            p Продолжить
                div.glass-additive
                    h2.glass-additive__caption Дополнительная обработка
                    label.glass-additive__label
                        select.glass-additive__select(name="additive")
                            option.glass-additive__option(value="null" selected) Без обработки
                            option.glass-additive__option(value="polishing") Полирока
                            option.glass-additive__option(value="grinding") Шлифовка
                    a
                        div.back.back--hover.back--active
                            p Назад
                    input(onClick="window.location.href = '/offer'" type="submit" value="Отправить").submit.submit--hover.submit--active
                div.summa
                    p.summa__text Сумма заказа:
                    input.summa__input(readonly name="summa" type="number" value=4000)
        footer#footer.footer
            img.footer__logo(src="/imgs/logo.png" alt="logo")
            div.footer__info
                div.footer__element
                    i(class="gg-edit-black-point")
                    p.footer__text г. Москва, пр-т Волгоградский, д.47. Бизнес-центр "КУБ
                - let footerImage = ['gg-phone', 'gg-phone']
                - let footerText = ['+7(495)777-33-54', '8(800)775-53-18']
                - i = 0
                while i < 2
                    div.footer__element
                        i(class=`${footerImage[i]}`)
                        p.footer__text
                            a(class='footer__link' href=`tel:${footerText[i]}`)= footerText[i]
                            - i++
        script(src="/js/form.js")